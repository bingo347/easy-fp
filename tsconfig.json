{
    "compilerOptions": {
        "module": "ESNext",
        "outDir": ".",
        "rootDir": "./",
        "target": "ES2018",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "baseUrl": "./",
        "paths": {
            "@lambda-fn/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "__mocks__/**/*.ts"
    ],
    "exclude": []
}
