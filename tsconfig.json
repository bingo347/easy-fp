{
    "compilerOptions": {
        "module": "ESNext",
        "outDir": ".",
        "rootDir": "./",
        "target": "ES2019",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "strict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "jest.config.ts",
        "packages/*/src/**/*.ts"
    ],
    "exclude": []
}
